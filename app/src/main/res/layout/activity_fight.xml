<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FightActivity">

    <ImageView
        android:id="@+id/menuBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/menu_back" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/fighting"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/menuBack"
        app:layout_constraintStart_toEndOf="@+id/menuBack"
        app:layout_constraintTop_toTopOf="@+id/menuBack" />

    <TextView
        android:id="@+id/healthName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Enemy HP:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/healthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/healthName"
        app:layout_constraintStart_toEndOf="@+id/healthName"
        app:layout_constraintTop_toTopOf="@+id/healthName" />

    <TextView
        android:id="@+id/playerHealthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Your HP:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthName" />

    <TextView
        android:id="@+id/playerHPValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/playerHealthText"
        app:layout_constraintStart_toEndOf="@+id/playerHealthText"
        app:layout_constraintTop_toTopOf="@+id/playerHealthText" />

    <Button
        android:id="@+id/fightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Fight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/physicalAttackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PhysicalAttack"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="550dp" />

    <Button
        android:id="@+id/naturalAttackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NaturalAttack"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="554dp" />


</androidx.constraintlayout.widget.ConstraintLayout>